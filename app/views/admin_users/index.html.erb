<div id="content" class="container body-img" style="margin-top: 150px;">
  <h2 class='heading-fix'> List of Users</h2>
  <div>
    <%= link_to "Create User", new_admin_user_path, :class=>"btn btn-primary", :style=>"float :right;" %>
  </div>

  <div class="table-responsive list-view div-documents-list-section fix-position-table">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <!-- <th class="entry-num">Entry Number</th> -->
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Username</th>
          <th>User Type</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody class="table-body-background change-font">
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.user_name %></td>
            <td><%= user.user_type %></td>
            <td><%= link_to 'Delete', admin_user_path(user, :url=>"user_url"), method: :delete, data:{confirm: 'Are you want to delete user?'}, :class=> "" %> | <%= link_to 'Edit', edit_admin_user_path(user), :class=> '' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>