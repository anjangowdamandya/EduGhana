<div id="content" class="container body-img" style="margin-top: 150px;">
  <h2 class='heading-fix'> List of Students</h2>
  <div>
    <%= link_to "Create Profile", new_admission_path, :class=>"btn btn-primary", :style=>"float :right;" %>
  </div>

  <div class="table-responsive list-view div-documents-list-section fix-position-table">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <!-- <th class="entry-num">Entry Number</th> -->
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody class="table-body-background change-font">
        <% if @admissions.present? %>
          <% @admissions.each do |admission| %>
            <tr>
              <td><%= admission.user.first_name %></td>
              <td><%= admission.user.last_name %></td>
              <td><%= admission.user.email %></td>
              <td><%= link_to 'Delete', admission_path(admission, :url=>"admission_url"), method: :delete, data:{confirm: 'Are you want to delete admission?'}, :class=> "" %> | <%= link_to 'Edit', edit_admission_path(admission), :class=> '' %></td>
          <% end %>
            </tr>
        <% else %>
          <tr>
            <td></td>
            <td></td>
            <td>No profile found</td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>