<%= form_for(@admission, :url => (@admission.new_record? ? admissions_url : admission_url(@admission))) do |f| %>

  <% if @admission.errors.any? %>
    <div id="error_explanation">
      <span><%= pluralize(@admission.errors.count, "error") %> prohibited this profile from being saved:</span>
      <ul>
        <% @admission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% unless @admission.new_record? %>
  <div class="form-group">
    <%= f.label :admission_Id %><br />
    <%= f.text_field :admission_id, :class => "form-control",:readonly => true %>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :batch %><br />
    <%= f.select :batch_id, Batch.all.map{|b| [b.name, b.id]},{},{:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.select :user_id, users.all.map{|u| [u.full_name, u.id]},{},{:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :date %><br />
    <%= f.text_field :admission_date, :class => "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <% type=['Male', 'Female'] %>
    <%= f.label :gender %><br />
    <%= f.select(:gender, options_for_select(type, :selected => params[:status]), {},{:class => "form-control"}) %>
    <%#= f.select :user_type, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :street %><br />
    <%= f.text_field :street, :class => "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :city %><br />
    <%= f.text_field :city, :class => "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile, :class => "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :id_number %><br />
    <%= f.text_field :id_number, :class => "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <% id_type=['Driving licence', 'Passpost', 'Voters'] %>
    <%= f.label :id_type %><br />
    <%= f.select(:id_type, options_for_select(id_type, :selected => params[:status]), {},{:class => "form-control"}) %>
    <%#= f.select :user_type, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
