<div id="content" class="container body-img" style="margin-top: 150px;">
  <h2 class='heading-fix'> List of Students</h2>
  <div>
    <%= link_to "Add Student", new_student_path, :class=>"btn btn-primary", :style=>"float :right;" %>
  </div>

  <div class="table-responsive list-view div-documents-list-section fix-position-table">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <!-- <th class="entry-num">Entry Number</th> -->
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Username</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody class="table-body-background change-font">
        <% @students.each do |student| %>
          <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
            <td><%= student.user_name %></td>
            <td><%= link_to 'Delete', student_path(student, :url=>"student_url"), method: :delete, data:{confirm: 'Are you want to delete student?'}, :class=> "" %> | <%= link_to 'Edit', edit_student_path(student), :class=> '' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>