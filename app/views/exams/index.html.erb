<div id="content" class="container body-img" style="margin-top: 150px;">
  <h3 class='heading-fix'> List of Exams</h3>
  <div>
    <%= link_to "Create Exam", new_exam_path, :class=>"btn btn-primary", :style=>"float :right;" %>
  </div>

  <div class="table-responsive list-view div-documents-list-section fix-position-table">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
        <!-- <th class="entry-num">Entry Number</th> -->
          <th>Name</th>
          <th>Minimum Marks</th>
          <th>Maximum Marks</th>
          <th>Weightage</th>
          <th>Action</th>
        </tr>
      </thead>
        <tbody class="table-body-background change-font">
          <% @exams.each do |exam| %>
          <tr>
            <td><%= exam.name %></td>
            <td><%= exam.minimum_marks %></td>
            <td><%= exam.maximum_marks %></td>
            <td><%= exam.weightage %></td>
            <td><%= link_to 'Delete', exam_path(exam, :url=>"exam_url"), method: :delete, data:{confirm: 'Are you want to delete exam?'}, :class=> "" %> | <%= link_to 'Edit', edit_exam_path(exam), :class=> '' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
