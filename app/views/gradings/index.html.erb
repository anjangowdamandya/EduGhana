<div id="content" class="container body-img" style="margin-top: 150px;">
  <h3 class='heading-fix'> List of Grades</h3>
  <div>
    <%= link_to "Create Grade", new_grading_path, :class=>"btn btn-primary", :style=>"float :right;" %>
  </div>

  <div class="table-responsive list-view div-documents-list-section fix-position-table">
    <table class="table table-striped table-hover" id="gradings_table">
      <thead>
        <tr>
        <!-- <th class="entry-num">Entry Number</th> -->
          <th>Report Type</th>
          <th>Minimum Marks</th>
          <th>Action</th>
        </tr>
      </thead>
        <tbody class="table-body-background change-font">
          <% @gradings.each do |grade| %>
          <tr>
            <td>
              <% if grade.report_type.present? %>
                <%= grade.report_type.name %>
              <% end %>
            </td>
            <td><%= grade.minimum_marks %></td>
            <td><%= link_to 'Delete', grading_path(grade, :url=>"grading_url"), method: :delete, data:{confirm: 'Are you want to delete grade?'}, :class=> "" %> | <%= link_to 'Edit', edit_grading_path(grade), :class=> '' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
