<div id="content" class="container body-img" style="margin-top: 150px;">
  <h3 class='heading-fix'> List of Batches</h3>
  <div>
    <%= link_to "Create Batch", new_batch_path, :class=>"btn btn-primary", :style=>"float :right;" %>
  </div>

  <div class="table-responsive list-view div-documents-list-section fix-position-table">
    <table class="table table-striped table-hover" id="batches_table">
      <thead>
        <tr>
        <!-- <th class="entry-num">Entry Number</th> -->
          <th>Name</th>
          <th>Code</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody class="table-body-background change-font">
        <% @batches.each do |batch| %>
          <tr>
            <td><%= batch.name %></td>
            <td><%= batch.code %></td>
            <td><%= batch.start_date %></td>
            <td><%= batch.end_date %></td>
            <td><%= link_to 'Delete', batch_path(batch, :url=>"batch_url"), method: :delete, data:{confirm: 'Are you want to delete batch?'}, :class=> "" %> | <%= link_to 'Edit', edit_batch_path(batch), :class=> '' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
